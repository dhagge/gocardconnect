<div id="gcc-billPayConfirmation">
    <div class="ccHeader">
        <div class="ccHeaderImg">
        </div>
    </div>
    <div class="ccPaymentForm">
        {{#if hasError }}
            <h2>Payment Error</h2>
            <p>We're sorry but your payment could not be processed.</p>
            <p>{{resp.errorDesc}}</p>
        {{else}}
            <h2>Payment Confirmation</h2>
            <p>Thank you, payment has been processed and applied to your bill.</p>
            <p>Your reference number:</p>
            <p class="ccRefNumber">{{resp.retref}}</p>
        {{/if}}
    </div>
</div>